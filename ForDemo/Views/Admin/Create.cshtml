
@model ForDemo.Models.UserViewModel
@{
    Layout = null;
}

@using (Html.BeginForm("NewData", "Admin", FormMethod.Post, new { id = "AdminData", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="create-modal-label"><i class="fas fa-pencil-alt"></i>&nbsp;&nbsp;<b>@ViewBag.Title</b></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button> 
            </div>
            <div class="card-body">
                <div class="error">

                </div>
                <div class="row ">
                    <div class="col-md-4 spacing">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserId, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @id = "UserId"  } })
                        </div>
                    </div>
                    <div class="col-md-4 spacing">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @id = "UserName" } })
                        </div>
                    </div>
                    <div class="col-md-4 spacing">
                        <div class="form-group">
                            @Html.LabelFor(model => model.UserPd, htmlAttributes: new { @class = "col-form-label" })
                            @Html.EditorFor(model => model.UserPd, new { htmlAttributes = new { @class = "form-control", @id = "UserPd" } })
                        </div>
                    </div>
                </div>

                <div class="row ">
                    <div class="col-md-4 spacing">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Roles, htmlAttributes: new { @class = "col-form-label addRedStar addColon" })
                            @Html.DropDownListFor(model => model.Roles, (IEnumerable<SelectListItem>)ViewBag.Roles, new { @id = "Roles", @class = "form-control", onchange = "HislocationChange('txtHISLOCATION','formDEPT_NO')" })
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" id="btn_NewData" class="btn btn-primary btn-m">
                    <i class="fas fa-check-circle"></i>
                    &nbsp;&nbsp;
                    存檔
                </button>
                <button type="button" class="btn btn-secondary btn-m" data-dismiss="modal">
                    <i class="fas fa-sign-out-alt"></i>
                    &nbsp;&nbsp;
                    離開
                </button>
            </div>
        </div>
    </div>
}

