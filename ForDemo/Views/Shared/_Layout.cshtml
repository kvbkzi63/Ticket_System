@using System.Configuration

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Ticket_System</title>
    @Styles.Render("~/Content/css") 
    <link href="~/Content/FontAs/css/all.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Scripts/bootstrap-table-master/bootstrap-table.min.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/favicon.ico" rel="shortcut icon" />
</head>
<body>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            font-family: Microsoft JhengHei;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #fbfdff;
        }

        header .navbar {
            font-weight: 600;
            letter-spacing: .02rem;
        }

        #divBody {
            flex-grow: 1;
        }

        #divFooter {
            position: relative;
            display: flex;
            justify-content: center;
            width: 100%;
            padding: .9rem;
            font-size: .7rem;
            font-weight: 600;
        }

            #divFooter:before {
                content: "";
                width: 97%;
                border-top: 1px solid #e0e0e0;
                position: absolute;
                top: 0;
            }

        .bg-primary-light {

            background-color: #4088d6 !important;
        }

        nav.bg-primary-light > .container a {
            color: rgb(255, 255, 255);
        }

            nav.bg-primary-light > .container a:hover {
                background-color: rgb(92, 130, 216);
                color: rgb(255, 255, 255) ;
            }

        #logout a{
            color: rgb(108, 117, 125);
        }

            #logout a:hover {
                background-color: rgb(92, 130, 216);
                color: rgb(255, 255, 255);
            }
    </style>
    <div>
        <header class="shadow-sm">
            <nav class="navbar navbar-expand-xl bg-primary-light navbar-fixed-top">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        @if (!string.IsNullOrWhiteSpace("" + Session["UserName"]))
                        {
                            @*if ((int)Session["Roles"] == 3)
                            {
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown ">
                                        @Html.ActionLink("帳號管理作業", "Index", "Admin", new { area = "" }, new { @class = "navbar-brand" })
                                    </li>
                                </ul>
                            }
                            else
                            {
                                <ul class="navbar-nav">
                                    <li class="nav-item dropdown ">
                                        @Html.ActionLink("待處理問題清單", "Index", "TicketRecord", new { area = "" }, new { @class = "navbar-brand" })
                                    </li>
                                </ul>
                            }*@

                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true">您好 @Session["UserName"].ToString()</a>
                                    <div id="logout" class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @Html.ActionLink("登出", "SignOut", "Login", new { area = "" }, new { @class = "dropdown-item" })
                                    </div>
                                </li>
                            </ul>

                        }

                    </div>
                </div>
            </nav>
        </header>
    </div>
    <div id="divBody" class="body-content">

        @RenderBody()
    </div>
    <footer id="divFooter" class="mt-4">
        <div>&copy; @DateTime.Now.Year - Ticket_System - @ConfigurationManager.AppSettings["WebVersion"]</div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <script src="~/Scripts/bootstrap-table-master/bootstrap-table.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html> 